<h1>Listing terms</h1>

<table>
  <tr>
    <th>Vist day</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Room number</th>
    <th>Doctor</th>
  </tr>

<% for term in @terms %>
  <tr>
    <td><%=h term.visit_day %></td>
    <td><%=h term.start_time %></td>
    <td><%=h term.end_time %></td>
    <td><%=h term.room_number %></td>
    <td><%=h "#{term.doctor.name} #{term.doctor.surname}" %></td>
    <td><%= link_to 'Show', term %></td>
    <td><%= link_to 'Edit', edit_term_path(term) %></td>
    <td><%= link_to 'Destroy', term, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>



